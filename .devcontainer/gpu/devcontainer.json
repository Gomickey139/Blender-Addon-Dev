{
	"name" : "Blender Addon Dev(GPU)",

	"build": {
		"dockerfile": "../Dockerfile",
		"context": "../.."
	},

	"runArgs": [
		 "--gpus", "all"
	],

	"postCreateCommand": "pip install fake-bpy-module-latest",

	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"JacquesLucke.blender-development"
			],
			"settings": {
				"blender.executables": [
					{
						"name": "Blender 4.5 Container",
						"path": "/usr/local/bin/blender/blender",
						"isDebug": false
					}
				],

				"python.defaultInterpreterPath": "/usr/local/bin/python"
			}
		}
	},

	"remoteUser": "vscode"
}